<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentView">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/kuning_muda"
        android:scaleType="centerCrop" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@android:color/transparent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/_14sdp"
                android:paddingLeft="@dimen/_14sdp"
                android:gravity="bottom">
                <!-- Card view with white background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_380sdp"
                    android:layout_marginTop="50dp"
                    android:padding="@dimen/_8sdp"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:background="@drawable/background_rounded"
                    android:backgroundTint="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail Ujian"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:textSize="@dimen/_25sdp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Silahkan periksa detail ujian sebelum mulai mengerjakan."
                            android:layout_marginTop="@dimen/_15sdp"
                            android:textSize="@dimen/_12sdp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:paddingRight="@dimen/_6sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:text="Nama Ujian"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:textSize="@dimen/_12sdp" />
                            <TextView
                                android:id="@+id/tvNamaUjian"
                                android:layout_width="0dp"
                                android:layout_weight="7"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text=": AGAMA ISLAM"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:paddingRight="@dimen/_6sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:text="Mapel"
                                android:textSize="@dimen/_12sdp" />
                            <TextView
                                android:id="@+id/tvMapel"
                                android:layout_width="0dp"
                                android:layout_weight="7"
                                android:layout_height="wrap_content"
                                android:text=": AGAMA ISLAM"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:paddingRight="@dimen/_6sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:text="Kelas"
                                android:textSize="@dimen/_12sdp" />
                            <TextView
                                android:id="@+id/tvKelas"
                                android:layout_width="0dp"
                                android:layout_weight="7"
                                android:layout_height="wrap_content"
                                android:text=": AGAMA ISLAM"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:paddingRight="@dimen/_6sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:text="Guru"
                                android:textSize="@dimen/_12sdp" />
                            <TextView
                                android:id="@+id/tvGuru"
                                android:layout_width="0dp"
                                android:layout_weight="7"
                                android:layout_height="wrap_content"
                                android:text=": AGAMA ISLAM"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:paddingRight="@dimen/_6sdp"
                            android:weightSum="10">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:text="Durasi"
                                android:textSize="@dimen/_12sdp" />
                            <TextView
                                android:id="@+id/tvDurasi"
                                android:layout_width="0dp"
                                android:layout_weight="7"
                                android:layout_height="wrap_content"
                                android:text=": AGAMA ISLAM"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnMulai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mulai Mengerjakan"
                            android:textSize="@dimen/_15sdp"
                            android:layout_marginTop="16dp"
                            android:textColor="@color/white"
                            android:padding="@dimen/_8sdp"
                            android:backgroundTint="@color/biru_sedang"
                            android:background="@drawable/rounded_button_background" />
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Jangan lupa berdo'a sebelum mengerjakan."
                            android:layout_marginTop="@dimen/_15sdp"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_40sdp"
                    android:layout_gravity="center_horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@android:color/white">
                        <ImageView
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/ic_logo"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <include layout="@layout/load_data" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
