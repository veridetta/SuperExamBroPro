<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RoleActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/pilih_jenis_pengguna"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_14sdp">
            <!-- Kartu Siswa -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_siswa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_14sdp">
                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/ic_siswa"
                        android:layout_gravity="center"
                        app:tint="@color/colorPrimary"
                        android:contentDescription="Siswa Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Siswa"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_12sdp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Kartu Guru -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_guru"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_14sdp">

                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/ic_guru"
                        app:tint="@color/colorPrimary"
                        android:layout_gravity="center"
                        android:contentDescription="Guru Icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guru"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:textSize="@dimen/_13sdp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_50sdp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/btnAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/kuning_muda"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_about"
                android:backgroundTint="@color/kuning_sedang"
                android:layout_gravity="center_vertical"
                android:background="@drawable/background_rounded"
                android:layout_marginRight="@dimen/_5sdp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/merah_muda"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/_6sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_logout"
                app:tint="@color/white"
                android:backgroundTint="@color/merah_sedang"
                android:layout_gravity="center_vertical"
                android:background="@drawable/background_rounded"
                android:layout_marginRight="@dimen/_5sdp"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/cek_koneksi" />
</RelativeLayout>