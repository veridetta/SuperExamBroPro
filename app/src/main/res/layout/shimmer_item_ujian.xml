<com.facebook.shimmer.ShimmerFrameLayout
    android:id="@+id/shimmerContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:shimmer_duration="1000"
    app:shimmer_shape="linear"
    app:shimmer_auto_start="true"
    layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_14sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvMapel"
                android:gravity="center"
                android:drawablePadding="@dimen/_4sdp"
                android:layout_width="@dimen/_80sdp"
                android:background="@color/gray"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="@dimen/_4sdp"
                app:drawableTint="@color/white" />
            <TextView
                android:id="@+id/tvKelas"
                android:gravity="center"
                android:drawablePadding="@dimen/_4sdp"
                android:layout_width="@dimen/_80sdp"
                android:background="@color/gray"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9sdp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginStart="@dimen/_4sdp"
                app:drawableStartCompat="@drawable/ic_kelas"
                app:drawableTint="@color/white" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvNamaUjian"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvKodeUjian"
            android:layout_width="@dimen/_80sdp"
            android:background="@color/black"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="@dimen/_80sdp"
                android:background="@color/gray"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:drawablePadding="@dimen/_4sdp"
                app:drawableStartCompat="@drawable/ic_jadwal"
                app:drawableTint="@color/white" />
            <TextView
                android:id="@+id/tvDurasi"
                android:layout_width="@dimen/_80sdp"
                android:background="@color/gray"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:drawablePadding="@dimen/_4sdp"
                android:gravity="center"
                app:drawableStartCompat="@drawable/ic_jam"
                app:drawableTint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:id="@+id/lyiconEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_weight="2">
                <LinearLayout
                    android:id="@+id/btnUbah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_background"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:backgroundTint="@color/kuning_sedang"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:background="@color/gray"
                        android:layout_height="@dimen/_26sdp"
                        app:tint="@color/white"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_5sdp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
